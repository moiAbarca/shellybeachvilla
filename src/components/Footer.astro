<style>
  .footer {
    background: var(--color-primary);
    color: var(--color-white);
    padding: var(--spacing-lg) 0 var(--spacing-md);
    margin-top: var(--spacing-xl);
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr; /* First column wider for logo */
    gap: 2rem;
    margin-bottom: var(--spacing-lg);
    align-items: start; /* KEY: Align all to top */
  }
  
  .footer-section {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .footer-logo-section {
    /* No special positioning needed */
  }

  .footer-logo {
    margin-bottom: var(--spacing-sm);
  }

  .footer-logo-img {
    height: 165px; /* Bigger logo - adjust this value (60-100px) */
    width: auto;
    max-width: 100%;
    display: block;
  }
  
  .footer-heading {
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: var(--spacing-sm);
    color: var(--color-accent);
    margin-top: 0; /* Align with logo top */
  }
  
  .footer-text {
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
    font-weight: 400;
    font-size: 1rem;
  }
  
  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 0;
    margin: 0;
  }
  
  .footer-links a {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    transition: var(--transition);
    font-weight: 400;
    font-size: 1rem;
  }
  
  .footer-links a:hover {
    color: var(--color-accent);
    padding-left: 0.5rem;
  }
  
  .footer-contact-link {
    color: var(--color-accent);
    text-decoration: none;
    transition: var(--transition);
  }
  
  .footer-contact-link:hover {
    text-decoration: underline;
  }
  
  .footer-bottom {
    text-align: center;
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    font-weight: 300;
  }
  
  /* Tablet - 2x2 grid */
  @media (max-width: 968px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-md);
    }
    
    .footer-logo-img {
      height: 80px;
    }
  }
  
  /* Mobile - stacked */
  @media (max-width: 600px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
    
    .footer-logo-img {
      height: 50px;
    }
  }
</style>