<style>
  /* Page Header */
  .page-header {
    background: var(--color-primary);
    padding: var(--spacing-xl) var(--spacing-md);
    text-align: center;
  }
  
  .page-title {
    font-size: 3rem;
    font-weight: 500;
    color: var(--color-white);
    margin-bottom: var(--spacing-sm);
    letter-spacing: 0.05em;
  }
  
  .page-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 300;
  }
  
  /* Contact Section */
  .contact-section {
    background: var(--color-white);
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--spacing-xl);
  }
  
  /* Contact Form */
  .contact-form-wrapper {
    position: relative;
  }
  
  .form-heading {
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }
  
  .form-description {
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: var(--spacing-lg);
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
  }
  
  .form-label {
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: var(--spacing-xs);
    font-size: 0.95rem;
  }
  
  .required {
    color: #d32f2f;
  }
  
  .form-input,
  .form-textarea {
    padding: 0.875rem 1rem;
    border: 2px solid var(--color-border);
    border-radius: var(--border-radius);
    font-family: var(--font-primary);
    font-size: 1rem;
    transition: var(--transition);
    background: var(--color-white);
  }
  
  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(45, 95, 93, 0.1);
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 150px;
  }
  
  .btn-submit {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
  }
  
  /* Success Message */
  .form-success {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: var(--color-white);
    padding: var(--spacing-xl);
    border-radius: var(--border-radius);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    text-align: center;
    display: none;
    z-index: 10;
  }
  
  .form-success.show {
    display: block;
  }
  
  .success-icon {
    width: 80px;
    height: 80px;
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    margin: 0 auto var(--spacing-md);
  }
  
  .form-success h3 {
    font-size: 1.8rem;
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }
  
  .form-success p {
    color: var(--color-text-light);
    line-height: 1.8;
  }
  
  /* Contact Info */
  .contact-info-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .contact-info-card {
    padding: var(--spacing-lg);
  }
  
  .info-heading {
    font-size: 1.3rem;
    font-weight: 500;
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }
  
  .info-text {
    color: var(--color-text-light);
    line-height: 1.8;
  }
  
  .faq-list {
    list-style: none;
    padding-left: 0;
  }
  
  .faq-list li {
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-light);
    line-height: 1.8;
  }
  
  .faq-list strong {
    color: var(--color-text);
  }
  
  /* Map Section */
  .map-section {
    background: var(--color-bg);
  }
  
  .map-placeholder {
    margin-bottom: var(--spacing-lg);
  }
  
  .map-directions {
    background: var(--color-white);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
  }
  
  .directions-heading {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    text-align: center;
  }
  
  .directions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
  }
  
  .direction-item {
    text-align: center;
    padding: var(--spacing-md);
  }
  
  .direction-item h4 {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }
  
  .direction-item p {
    color: var(--color-text-light);
  }
  
  /* Image Placeholder */
  .image-placeholder {
    background: linear-gradient(135deg, #e0e0de 0%, #d0d0ce 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    border-radius: var(--border-radius);
    color: var(--color-text-light);
    font-weight: 300;
    font-size: 1.1rem;
  }
  
  .image-placeholder.large {
    min-height: 400px;
  }
  
  /* Responsive */
  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
    
    .page-title {
      font-size: 2.5rem;
    }
    
    .directions-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
  }
  
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }
    
    .form-heading {
      font-size: 1.6rem;
    }
  }
</style>

